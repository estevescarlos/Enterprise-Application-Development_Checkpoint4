@model Funcionario


<div class="form-group row">
    <div class="col">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>

    <div class="col">
        <label asp-for="CPF"></label>
        <input asp-for="CPF" class="form-control" />
    </div>
</div>

<div class="form-group row">
    <div class="col">
        <label asp-for="Setor"></label>
        <select asp-for="Setor" class="form-control" asp-items="@Html.GetEnumSelectList<Setores>()">
            <option>Selecione</option>
        </select>
    </div>

    <div class="col">
        <label asp-for="Cargo"></label>
        <input asp-for="Cargo" class="form-control" />
    </div>

    <div class="col">
        <label asp-for="Nivel"></label>
        <select asp-for="Nivel" class="form-control" asp-items="@ViewBag.niveis">
            <option>Selecione</option>
        </select>
    </div>
</div>



<div class="form-group row">
    <div class="col">
        <label asp-for="DataAdmissao"></label>
        <input asp-for="DataAdmissao" class="form-control" />
    </div>

    <div class="col">
        <label asp-for="Salario"></label>
        <div class="form-group">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">R$</span>
                </div>
                <input asp-for="Salario" class="form-control" />
                <div class="input-group-append">
                    <span class="input-group-text">.00</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="form-group">
    <div class="custom-control custom-switch">
        <input asp-for="Status" class="custom-control-input" checked="">
        <label class="custom-control-label" asp-for="Status"></label>
    </div>
</div>
